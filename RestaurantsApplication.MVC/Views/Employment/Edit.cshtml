@model EmploymentShortInfoViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.EmployeeCode" class="form-label">Employee code</label>
                <label asp-for="@Model.EmployeeCode" class="form-control">@Model.EmployeeCode</label>
                <span asp-validation-for="EmployeeCode" class="text-danger"></span>
               
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StartDate" class="form-label">Start date</label>
                <input asp-for="@Model.StartDate" class="form-control" aria-required="true" type="date"/>
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="@Model.EndDate" class="form-label">End date</label>
                <input asp-for="@Model.EndDate" class="form-control" aria-required="false" type="date"/>
                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LocationId" class="form-label">Location</label>
                <select asp-for="@Model.LocationId" class="form-control">
                    @foreach (var location in Model.Locations)
                    {
                        <option value="@location.Id">@location.Name</option>
                    }
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DepartmentId" class="form-label">Department</label>
                <select asp-for="@Model.DepartmentId" class="form-control">
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RoleId" class="form-label">Role</label>
                <select asp-for="@Model.RoleId" class="form-control">
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.IsMain" class="form-label">Main employment</label>
                <input asp-for="@Model.IsMain" type="checkbox"/>
                <span asp-validation-for="IsMain" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Rate" class="form-label">Rate</label>
                <input asp-for="@Model.Rate" class="form-control" type="number" value="@Model.Rate" min="4.00"/>
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <input asp-for="@Model.EmployeeCode" value="@Model.EmployeeCode" type="hidden" />
            <input asp-for="@Model.Id" value="@Model.Id" type="hidden" />
            <input asp-for="@Model.EmployeeId" value="@Model.EmployeeId" type="hidden" />
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Apply" />
            </div>
        </form>
    </div>
</div>
