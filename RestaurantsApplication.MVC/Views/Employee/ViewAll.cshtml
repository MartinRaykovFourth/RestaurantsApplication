@model IEnumerable<EmployeeWithIdViewModel>

<a asp-controller="Employee" asp-action="Add">
	<input type="submit" value="Add employee" class="btn btn-primary mb-3" />
</a>
<table class="table table-light">
	<thead>
		<tr>
			<th scope="col">First name</th>
			<th scope="col">Last name</th>
			<th scope="col">Code</th>
			<th scope="col"></th>
			<th scope="col"></th>
			<th scope="col"></th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var e in Model)
		{
			<tr>
				<td>
					@e.FirstName
				</td>
				<td>
					@e.LastName
				</td>
				<td>
					@e.Code
				</td>
				<td>
					<a asp-route-employeeCode="@e.Code" asp-controller="Employment" asp-action="Add">
						<input type="submit" value="Employ" class="btn btn-success" />
					</a>
				</td>
				<td>
					<a asp-route-employeeId="@e.Id" asp-controller="Employment" asp-action="EmployeeEmployments">
						<input type="submit" value="View employments" class="btn btn-success"/>
					</a>
				</td>
				<td>
					<a asp-route-employeeId="@e.Id" asp-controller="Employee" asp-action="Edit">
						<input type="submit" value="Edit" class="btn btn-success" />
					</a>
				</td>
				<td>
					<a asp-route-employeeId="@e.Id" asp-controller="Employee" asp-action="Delete">
						<input type="submit" value="Delete" class="btn btn-danger" />
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>